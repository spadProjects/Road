@model Road.Core.Models.ArticleComment
@{
    ViewBag.Title = "کامنت ها";
    Layout = null;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
  {
      @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="hidden" id="ArticleId" name="ArticleId" value="@ViewBag.ArticleId">
    <input type="hidden" id="ParentId" name="ParentId" value="@ViewBag.ParentId">
    <div class="form-group">
        <label for="Message">پاسخ</label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control " } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "form-text text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div style="float:left">
            <input type="submit" value="ثبت" class="btn btn-primary mr-2" />
        </div>
    </div>
</div>
  }
<script>
    $.validator.unobtrusive.parse("#form");
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}