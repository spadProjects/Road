@model Road.Core.Models.Article

@{
    ViewBag.Title = "Delete";
}
<h4 class="card-label">
    آیا مطمئن هستید که می خواهید این مطلب را حذف کنید؟
</h4>
<dl class="row" style="padding-top:10px">
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.Title)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.Title)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.ArticleCategory.Title)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.ArticleCategory.Title)
    </dd>
    <dt class="col-sm-4">
        نویسنده
    </dt>
    <dd class="col-sm-8">
        @if (Model.User != null)
        {
            <span>@Model.User.FirstName @Model.User.LastName</span>
        }
        else
        {
            <span>-</span>
        }
    </dd>
</dl>
<div style="float:left">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="حذف" class="btn btn-danger mr-2" />
    }
</div>
