@model Road.Web.ViewModels.ProjectDetailViewModel
@{
    ViewBag.Title = "جزییات پروژه";
}
<div class="row-project-detail">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="themesflat-spacer clearfix" data-desktop="60" data-mobile="60" data-smobile="60"></div>
                <div class="detail-inner-wrap">
                    <div class="detail-info">
                        <div class="content-info">
                            <div class="themesflat-headings style-2 clearfix">
                                <h2 class="heading line-height-62">@Model.Project.Title</h2>
                                <div class="sep has-width w80 accent-bg clearfix">
                                </div>
                            </div>
                            <ul class="list-info has-icon icon-left">
                                @if (!string.IsNullOrEmpty(Model.Project.Customer))
                                {
                                    <li><span class="text">مشتری <span class="icon"><i class="fa fa-user"></i></span></span><span class="right">@Model.Project.Customer</span></li>
                                }
                                @if (!string.IsNullOrEmpty(Model.Project.Budget))
                                {
                                    <li><span class="text">بودجه <span class="icon"><i class="fa fa-usd"></i></span></span><span class="right">@Model.Project.Budget</span></li>
                                }
                                @if (!string.IsNullOrEmpty(Model.Project.SurfaceArea))
                                {
                                    <li><span class="text">منطقه سطح <span class="icon"><i class="fa fa-search"></i></span></span><span class="right">@Model.Project.SurfaceArea</span></li>
                                }
                                @if (!string.IsNullOrEmpty(Model.Project.CompletedDate))
                                {
                                    <li><span class="text">سال کامل شده <span class="icon"><i class="fa fa-calendar"></i></span></span><span class="right">@Model.Project.CompletedDate</span></li>
                                }
                                @if (!string.IsNullOrEmpty(Model.Project.FirstConsultant))
                                {
                                    <li><span class="text">نخستین مشاور: <span class="icon"><i class="fa fa-folder-open"></i></span></span><span class="right">@Model.Project.FirstConsultant</span></li>
                                }
                            </ul>
                        </div><!-- /.content-info -->

                        <div class="themesflat-spacer clearfix" data-desktop="46" data-mobile="35" data-smobile="35"></div>

                    </div>
                    <div class="detail-gallery">
                        <div class="themesflat-spacer clearfix" data-desktop="21" data-mobile="21" data-smobile="21"></div>
                        <div class="themesflat-gallery style-2 has-arrows arrow-center arrow-circle offset-v-82 has-thumb w185 clearfix" data-gap="0" data-column="1" data-column2="1" data-column3="1" data-auto="false">
                            <div class="owl-carousel owl-theme">
                                @foreach (var item in Model.Gallery)
                                {
                                    <div class="gallery-item">
                                        <div class="inner">
                                            <div class="thumb">
                                                <img src="/Files/ProjectImages/ProjectGallery/@item.Image" alt="@item.Title">
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div><!-- /.themesflat-cousel-box -->
                        <div class="themesflat-spacer clearfix" data-desktop="40" data-mobile="40" data-smobile="40"></div>
                        <div class="flat-content-wrap style-3 clearfix">
                            <h5 class="title">شرح پروژه</h5>
                            <div class="sep has-width w60 accent-bg margin-top-18 clearfix"></div>
                            <p>@Model.Project.ShortDescription</p>
                            <p class="margin-top-28">
                                @Html.Raw(Model.Project.Description)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="themesflat-spacer clearfix" data-desktop="58" data-mobile="60" data-smobile="60"></div>
            </div>
        </div><!-- /.row -->
        @if (Model.SimilarProjects.Any())
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="themesflat-lines style-1 line-full line-solid clearfix"><span class="line"></span></div>
                    <div class="themesflat-spacer clearfix" data-desktop="46" data-mobile="35" data-smobile="35"></div>
                    <div class="themesflat-headings style-2 clearfix">
                        <h2 class="heading">پروژه های مرتبط</h2>
                        <div class="sep has-width w80 accent-bg margin-top-3 clearfix"></div>
                    </div>
                    <div class="themesflat-spacer clearfix" data-desktop="35" data-mobile="35" data-smobile="35"></div>
                    <div class="themesflat-carousel-box data-effect has-arrows arrow-top arrow75 arrow-circle arrow-style-2 clearfix" data-gap="30" data-column="3" data-column2="2" data-column3="1" data-auto="false">
                        <div class="owl-carousel owl-theme">
                            @foreach (var item in Model.SimilarProjects)
                            {
                                <div class="themesflat-project style-1 clearfix">
                                    <div class="project-item">
                                        <div class="inner">
                                            <a href="/Projects/@item.Id/@item.Title.Replace("-", "").Replace("  ", " ").Replace(" ", "-")">
                                                <div class="thumb data-effect-item has-effect-icon w40 offset-v-43 offset-h-46">
                                                    <img src="/Files/ProjectImages/Thumb/@item.Image" alt="@item.Title">
                                                    <div class="text-wrap text-center">
                                                        <h5 class="heading"><a href="/Projects/@item.Id/@item.Title.Replace("-", "").Replace("  ", " ").Replace(" ", "-")">@item.Title</a></h5>
                                                        <div class="elm-meta">
                                                            <span>@item.ProjectType.Title</span>
                                                        </div>
                                                    </div>
                                                    <div class="overlay-effect bg-color-3"></div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>
                    </div><!-- /.themesflat-carousel-box -->
                    <div class="themesflat-spacer clearfix" data-desktop="80" data-mobile="60" data-smobile="60"></div>
                </div>
            </div>

        }
    </div><!-- /.container -->
</div>