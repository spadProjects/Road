@model Road.Web.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "بروز رسانی رمز عبور";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<div class="mb-20">
    <h3>بروز رسانی رمز عبور</h3>
    <div class="text-muted font-weight-bold">برای بروز رسانی رمز عبور ایمیل خود و رمز عبور جدید را وارد کنید</div>
</div>
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form fv-plugins-bootstrap fv-plugins-framework", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Code)
    <div class="form-group mb-10 fv-plugins-icon-container">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control h-auto form-control-solid py-4 px-8", placeholder = "ایمیل", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-10 fv-plugins-icon-container">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control h-auto form-control-solid py-4 px-8", placeholder = "رمز عبور جدید", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-10 fv-plugins-icon-container">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control h-auto form-control-solid py-4 px-8", placeholder = "تکرار رمز عبور جدید", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group d-flex flex-wrap flex-center mt-10">
        <input type="submit" value="ارسال" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
