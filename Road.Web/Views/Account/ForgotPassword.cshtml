@model Road.Web.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "رمز عبور خود را فراموش کرده اید؟";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}
<div class="mb-20">
    <h3>رمز عبور خود را فراموش کرده اید؟</h3>
    <div class="text-muted font-weight-bold">برای بروز رسانی رمز عبور ایمیل خود را وارد کنید</div>
</div>
@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form fv-plugins-bootstrap fv-plugins-framework", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group mb-10 fv-plugins-icon-container">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control h-auto form-control-solid py-4 px-8", placeholder = "ایمیل", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group d-flex flex-wrap flex-center mt-10">
        <a href="/Account/Login" class="btn btn-light-primary font-weight-bold px-9 py-4 my-3 mx-2">بازگشت</a>
        <input type="submit" value="ارسال" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2" />
    </div>
    <div></div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
